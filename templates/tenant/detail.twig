{% extends 'layouts/master.twig' %}

{% set title = tenant.nama ~ " | Tenant" %}

{% block content %}

    <!-- Page Heading -->
    <div class="d-flex align-items-center justify-content-start mb-4">
        <h2 class="h3 mb-0">
            <a href="{{ path_for('tenant') }}" class="" role="button">
                Tenant
            </a>
        </h2>
        <span class="mx-3">
            <i class="fa fa-angle-right"></i>
        </span>
        <h2 class="h3 mb-0 text-gray-800">{{ tenant.nama }}</h2>
    </div>

    <div class="row">
        <div class="col-12 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-start">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Detail Tenant</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ tenant.nama }}</div>
                            <div class="h6 mb-0 font-weight-slim text-gray-500">{{ tenant.slug }}</div>
                        </div>
                        <div class="col-auto">

                            <a href="{{ path_for('editTenant', {'id': tenant.id}) }}" class="btn btn-warning btn-sm" role="button">
                                <i class="fa fa-edit"></i>
                            </a>
                            <!-- <i class="fa fa-building-o fa-2x text-gray-300"></i> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- <div class="col-12 col-sm-6 col-md-3 mb-4">
                                    <div class="card border-left-success shadow h-100 py-2">
                                        <div class="card-body">
                                            <div class="row no-gutters align-items-center">
                                                <div class="col mr-2">
                                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Jumlah User</div>
                                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ tenant.jml_user }}</div>
                                                    <div class="h6 mb-0 font-weight-slim text-gray-500">user</div>
                                                </div>
                                                <div class="col-auto">
                                                    <i class="fa fa-user fa-2x text-gray-300"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div> -->

        <!-- <div class="col-12 col-sm-6 col-md-3 mb-4">
                                    <div class="card border-left-info shadow h-100 py-2">
                                        <div class="card-body">
                                            <div class="row no-gutters align-items-center">
                                                <div class="col mr-2">
                                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Jumlah Logger</div>
                                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ tenant.jml_logger }}</div>
                                                    <div class="h6 mb-0 font-weight-slim text-gray-500">logger</div>
                                                </div>
                                                <div class="col-auto">
                                                    <i class="fa fa-list-alt fa-2x text-gray-300"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div> -->

        <div class="col-12 col-md-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-success text-white d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fa fa-user"></i>
                        User -
                        {{ tenant.jml_user }}</h6>
                    <a href="{{ path_for('addUser') }}?t={{ tenant.id }}" class="btn btn-sm btn-light">
                        <i class="fa fa-plus"></i>
                    </a>
                </div>
                <div class="card-body">

                    {% for user in users %}
                        <div class="card rounded-0">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <h3 class="h5 m-0">{{ user.username }}</h3>
                                <div class="tools">
                                    <a class="btn btn-link text-warning" href="#" role="button">
                                        <i class="fa fa-unlink"></i>
                                    </a>
                                    <a class="btn btn-link text-danger" href="#" role="button">
                                        <i class="fa fa-trash-o"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="alert alert-warning m-0">Belum ada user</div>
                    {% endfor %}

                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-info text-white d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fa fa-list alt"></i>
                        Logger -
                        {{ tenant.jml_logger }}</h6>
                    <a href="{{ path_for('addLogger') }}?t={{ tenant.id }}" class="btn btn-sm btn-light">
                        <i class="fa fa-plus"></i>
                    </a>
                </div>
                <div class="card-body">

                    {% for logger in loggers %}
                        <div class="card rounded-0">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <h3 class="h5 m-0">{{ logger.sn }}</h3>
                                <div class="tools">
                                    <form class="d-inline" action="{{ path_for('unlinkLogger', {id: logger.id}) }}" method="post" onsubmit="return confirmUnlink('{{ logger.sn }}')">
                                        <button class="btn btn-link text-warning" role="button">
                                            <i class="fa fa-unlink"></i>
                                        </button>
                                    </form>
                                    <form class="d-inline" action="{{ path_for('deleteLogger', {id: logger.id}) }}" method="post" onsubmit="return confirmDelete('{{ logger.sn }}')">
                                        <button class="btn btn-link text-danger" role="button">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="alert alert-warning m-0">Belum ada logger</div>
                    {% endfor %}


                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block js %}
    <script>
        $(function () { // $('#nama').focus();

        })

        confirmUnlink = function(sn) {
            return confirm("Pisahkan logger "+ sn +" dari Tenant?");
        }

        confirmDelete = function(sn) {
            return confirm("Hapus logger "+ sn +" permanen?");
        }
    </script>
{% endblock %}
